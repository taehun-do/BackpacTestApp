<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLocation"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutToday"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/tvLocation"
        app:layout_constraintRight_toLeftOf="@id/layoutTomorrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivTodayState"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTodayState"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/ivTodayState"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvTodayTemp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTodayTemp"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintLeft_toRightOf="@id/ivTodayState"
            app:layout_constraintTop_toBottomOf="@id/tvTodayState"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTodayHumidity"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/tvTodayTemp"
            app:layout_constraintTop_toBottomOf="@id/tvTodayState"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutTomorrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/layoutToday"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivTomorrowState"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTomorrowState"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/ivTomorrowState"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvTomorrowTemp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTomorrowTemp"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintLeft_toRightOf="@id/ivTomorrowState"
            app:layout_constraintTop_toBottomOf="@id/tvTomorrowState"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTomorrowHumidity"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/tvTomorrowTemp"
            app:layout_constraintTop_toBottomOf="@id/tvTomorrowState"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>